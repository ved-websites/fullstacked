// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/_generated/prisma/client"
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../src/_generated/zod"

  useTypeAssertions = true
}

generator nestgraphql {
  provider     = "node prisma/utils/generators/prisma-nestjs-graphql.js"
  output       = "../src/_generated/prisma-nestjs-graphql"
  reExport     = "Directories"
  emitCompiled = true

  fields_Validator_from  = "class-validator"
  fields_Validator_input = "true"
}

// ===========
//    AUTH
// ===========

model User {
  /// @HideField({ output: false, input: true })
  id String @id @unique

  /// @HideField({ output: true, input: true })
  auth_session Session[]
  /// @HideField({ output: true, input: true })
  auth_key     Key[]

  email     String  @unique
  firstName String? @map("first_name")
  lastName  String? @map("last_name")

  lang              String?
  emailLang         String
  profilePictureRef String? @map("profile_picture_ref")
  registerToken     String? @unique @map("register_token")

  passwordResetAttempts PasswordResetAttempt[]
  roles                 Role[]
  messages              Message[]

  /// @HideField({ output: false, input: true })
  createdAt DateTime @default(now())
  /// @HideField({ output: false, input: true })
  updatedAt DateTime @updatedAt

  @@map("users")
}

/// @ObjectType({ isAbstract: true })
model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt

  user User @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("sessions")
}

/// @ObjectType({ isAbstract: true })
model Key {
  id              String  @id @unique
  hashed_password String?

  user    User   @relation(references: [id], fields: [user_id], onDelete: Cascade)
  user_id String

  @@index([user_id])
  @@map("keys")
}

// ===========
//  END AUTH
// ===========

// ===========
//    ROLES
// ===========

model Role {
  id   Int    @id @default(autoincrement())
  /// @Validator.IsNotEmpty()
  text String @unique

  users User[]

  /// @HideField({ output: false, input: true })
  createdAt DateTime @default(now())

  @@map("roles")
}

model PasswordResetAttempt {
  id Int @id @default(autoincrement())

  user   User    @relation(fields: [userId], references: [id])
  userId String
  token  String
  used   Boolean @default(false)

  expiryDate DateTime

  @@map("password_reset_attempts")
}

// ===========
//  END AUTH
// ===========

// ===========
//    APP
// ===========

model Message {
  id   Int      @id @default(autoincrement())
  /// @Validator.IsNotEmpty()
  text String
  /// @HideField({ output: false, input: true })
  time DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  /// @HideField({ output: true, input: true })
  userId String

  @@map("messages")
}
