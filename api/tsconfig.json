{
  "extends": "@v-ed/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    
    "baseUrl": ".",
    "paths": {
      "$prisma-client": ["./src/_generated/prisma/client/index"],
      "$prisma-graphql/*": ["./src/_generated/prisma-nestjs-graphql/*"],
      "$*": ["./src/@common/*"],
      "~/*": ["./src/*"],
    },
    
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    
    "outDir": "./dist",
    
    "declaration": false,
    
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": false,
  },
  "include": [
    "src/**/*.ts",
    "gulpfile.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}