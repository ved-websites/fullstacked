{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "api dev",
			"type": "shell",
			"command": "./.vscode/scripts/debug-api.sh",
			"isBackground": true,
			"windows": {
				"command": "pnpm start:debug"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"icon": {
				"id": "circuit-board"
			},
			"problemMatcher": {
				"pattern": {
					"regexp": "",
				},
				"background": {
					"beginsPattern": ".*Starting compilation.*",
					"endsPattern": ".*Server launched.*",
				},
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"panel": "shared",
				"group": "dev",
				"showReuseMessage": false,
				"clear": false,
				"close": true,
			}
		},
		{
			"label": "Terminate Dev Server",
			"command": "echo ${input:terminate-api}",
			"type": "shell",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"close": true
			}
		},
		{
			"label": "format prisma file",
			"command": "pnpm format:prisma",
			"type": "shell",
			"problemMatcher": [],
			"hide": true,
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"close": true,
			}
		},
	],
	"inputs": [
		{
			"id": "terminate-api",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "api dev",
		},
	]
}
