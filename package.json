{
  "name": "v-ed-fullstacked-workspace",
  "author": "Guillaume Marcoux",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.1.0"
  },
  "workspaces": [
    "./api",
    "./client"
  ],
  "scripts": {
    "init": "tsx ./scripts/init.ts",
    "init:name": "tsx ./scripts/project-name.ts"
  },
  "prettier": "@v-ed/prettier-config/svelte.cjs",
  "eslintConfig": {
    "extends": [
      "@v-ed/eslint-config"
    ],
    "rules": {
      "camelcase": ["error", {
        "allow": ["required_error"]
      }]
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        },
        "rules": {
          "no-inner-declarations": "off"
        }
      }
    ],
    "env": {
      "browser": true
    },
    "ignorePatterns": [
      "*.cjs",
      "build",
      ".svelte-kit"
    ]
  },
  "stylelint": {
    "extends": [
      "@v-ed/stylelint-config"
    ]
  },
  "devDependencies": {
    "@parcel/watcher": "2.3.0",
    "@types/node": "20.10.4",
    "@v-ed/eslint-config": "0.1.6",
    "@v-ed/prettier-config": "0.3.0",
    "@v-ed/stylelint-config": "0.2.4",
    "@v-ed/tsconfig": "0.3.0",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-svelte": "2.33.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "replace-in-file": "7.0.1",
    "stylelint": "15.10.3",
    "svelte": "4.2.0",
    "svelte2tsx": "0.6.21",
    "tslib": "2.6.2",
    "tsx": "4.6.2",
    "typescript": "5.2.2"
  }
}
