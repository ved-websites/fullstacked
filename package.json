{
  "name": "v-ed-fullstack-workspace",
  "author": "Guillaume Marcoux",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.1.0"
  },
  "workspaces": [
    "./api",
    "./client"
  ],
  "scripts": {
    "gql": "graphql-codegen --config .graphqlrc.ts",
    "gql:watch": "npm run gql -- --watch"
  },
  "prettier": "@v-ed/prettier-config",
  "eslintConfig": {
    "extends": [
      "@v-ed/eslint-config"
    ]
  },
  "stylelint": {
    "extends": [
      "@v-ed/stylelint-config"
    ],
    "ignoreFiles": [
      "./client/static/theme/**/*"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typed-document-node": "2.2.8",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@types/node": "16.11.25",
    "@v-ed/eslint-config": "0.1.0",
    "@v-ed/prettier-config": "0.1.1",
    "@v-ed/stylelint-config": "0.2.2",
    "dotenv": "16.0.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "graphql": "^16.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.1",
    "stylelint": "14.6.1",
    "tslib": "2.3.1"
  }
}
