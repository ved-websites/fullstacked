{
	"name": "@app/client",
	"description": "Web client using Sveltekit, Flowbite and TS-Rest, with a custom realtime library named TS-WS.",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"dev": "vite dev --host --port 5000",
		"debug": "vavite-loader vite dev --host --port 5000",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"test": "npm-run-all -p test:*",
		"test:playwright": "playwright test",
		"test:unit": "pnpm run vitest --run",
		"vitest": "vitest",
		"playwright:test": "npm-run-all -s build preview",
		"validate": "npm-run-all -s validate:*",
		"validate:svelte": "npm-run-all -s sync check:svelte",
		"validate:ts": "tsc --noEmit",
		"check:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "npm-run-all -p lint:*",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint .",
		"format": "prettier --write ."
	},
	"prettier": "@v-ed/prettier-config/svelte.cjs",
	"dependencies": {
		"@app/contract": "workspace:*",
		"@app/shared": "workspace:*",
		"@sentry/sveltekit": "8.54.0",
		"@shippr/supersocket": "github:V-ed/supersocket",
		"@ts-rest/core": "3.53.0-rc.1",
		"accept-language-parser": "1.5.0",
		"http-status-codes": "2.2.0",
		"runed": "0.30.0",
		"set-cookie-parser": "2.7.1",
		"sveltekit-i18n": "2.4.2",
		"sveltekit-superforms": "2.27.1",
		"tailwind-merge": "3.3.1",
		"wonka": "6.3.4",
		"ws": "8.18.0",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@egoist/tailwindcss-icons": "1.9.0",
		"@iconify-json/mdi": "1.2.3",
		"@playwright/test": "1.49.1",
		"@sveltejs/adapter-vercel": "5.7.2",
		"@sveltejs/kit": "2.23.0",
		"@sveltejs/vite-plugin-svelte": "6.0.0",
		"@tailwindcss/vite": "4.1.11",
		"@types/accept-language-parser": "1.5.6",
		"@types/set-cookie-parser": "2.4.10",
		"@types/ws": "8.5.13",
		"@typescript-eslint/eslint-plugin": "8.44.1",
		"@typescript-eslint/parser": "8.44.1",
		"@v-ed/prettier-config": "0.3.0",
		"@v-ed/tsconfig": "0.4.0",
		"@vavite/node-loader": "5.1.0",
		"flowbite": "3.1.2",
		"flowbite-svelte": "1.16.0",
		"flowbite-svelte-blocks": "2.1.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.49",
		"prettier": "3.4.2",
		"prettier-plugin-svelte": "3.3.2",
		"svelte": "5.35.6",
		"svelte-check": "4.2.2",
		"sveltekit-flash-message": "2.4.6",
		"tailwindcss": "4.1.11",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"vite": "7.0.4",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	}
}