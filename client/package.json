{
	"name": "@app/client",
	"description": "Web client using Sveltekit, Flowbite and TS-Rest, with a custom realtime library named TS-WS.",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"dev": "vite dev --host --port 5000",
		"debug": "vavite-loader vite dev --host --port 5000",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"test": "npm-run-all -p test:*",
		"test:playwright": "playwright test",
		"test:unit": "pnpm run vitest --run",
		"vitest": "vitest",
		"playwright:test": "npm-run-all -s build preview",
		"validate": "npm-run-all -s validate:*",
		"validate:svelte": "npm-run-all -s sync check:svelte",
		"validate:ts": "tsc --noEmit",
		"check:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "npm-run-all -p lint:*",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint .",
		"format": "prettier --write ."
	},
	"prettier": "@v-ed/prettier-config/svelte.cjs",
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": {},
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"dependencies": {
		"@app/contract": "workspace:*",
		"@app/shared": "workspace:*",
		"@sentry/sveltekit": "8.54.0",
		"@shippr/supersocket": "github:V-ed/supersocket",
		"@ts-rest/core": "3.51.0",
		"accept-language-parser": "1.5.0",
		"http-status-codes": "^2.2.0",
		"set-cookie-parser": "2.7.1",
		"sveltekit-i18n": "2.4.2",
		"sveltekit-superforms": "2.22.1",
		"tailwind-merge": "2.6.0",
		"vercel-email": "0.0.6",
		"wonka": "6.3.4",
		"ws": "8.18.0",
		"zod": "3.24.1"
	},
	"devDependencies": {
		"@egoist/tailwindcss-icons": "1.8.2",
		"@iconify-json/mdi": "1.2.2",
		"@playwright/test": "1.49.1",
		"@sveltejs/adapter-vercel": "5.5.2",
		"@sveltejs/kit": "2.15.1",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@types/accept-language-parser": "1.5.6",
		"@types/set-cookie-parser": "2.4.10",
		"@types/ws": "8.5.13",
		"@typescript-eslint/eslint-plugin": "8.19.0",
		"@typescript-eslint/parser": "8.19.0",
		"@v-ed/prettier-config": "0.3.0",
		"@v-ed/tsconfig": "0.4.0",
		"@vavite/node-loader": "5.1.0",
		"autoprefixer": "10.4.20",
		"flowbite": "2.5.2",
		"flowbite-svelte": "0.47.4",
		"flowbite-svelte-blocks": "1.1.4",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.49",
		"prettier": "3.4.2",
		"prettier-plugin-svelte": "3.3.2",
		"svelte": "5.16.1",
		"svelte-check": "4.1.1",
		"sveltekit-flash-message": "2.4.4",
		"tailwindcss": "3.4.17",
		"tslib": "2.8.1",
		"typescript": "5.7.2",
		"vite": "6.0.7",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "2.1.8"
	}
}