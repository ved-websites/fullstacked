{
	"name": "client",
	"description": "Web client using Sveltekit, Flowbite and supports GraphQL using Houdini.",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=7.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev --port 5000",
		"debug": "vavite-loader vite dev --port 5000",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"test": "npm-run-all -p test:*",
		"test:playwright": "playwright test",
		"test:unit": "pnpm run vitest --run",
		"vitest": "vitest",
		"playwright:test": "npm-run-all -s build preview",
		"validate": "npm-run-all -s validate:*",
		"validate:svelte": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json",
		"validate:ts": "tsc --noEmit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"prettier": "@v-ed/prettier-config/svelte.cjs",
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": {},
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"dependencies": {
		"@mdi/js": "^7.2.96",
		"graphql-ws": "^5.13.1",
		"http-status-codes": "^2.2.0",
		"set-cookie-parser": "2.6.0",
		"sveltekit-superforms": "1.5.0",
		"tailwind-merge": "1.14.0",
		"vercel-email": "0.0.6",
		"wonka": "^6.3.2",
		"ws": "8.13.0",
		"zod": "3.21.4"
	},
	"devDependencies": {
		"@playwright/test": "1.36.2",
		"@sveltejs/adapter-vercel": "^3.0.1",
		"@sveltejs/kit": "1.22.4",
		"@types/set-cookie-parser": "2.4.3",
		"@types/ws": "8.5.5",
		"@typescript-eslint/eslint-plugin": "6.3.0",
		"@typescript-eslint/parser": "6.3.0",
		"@v-ed/eslint-config": "0.1.6",
		"@v-ed/prettier-config": "0.3.0",
		"@v-ed/tsconfig": "0.3.0",
		"@vavite/node-loader": "2.0.1",
		"autoprefixer": "10.4.14",
		"flowbite": "1.8.1",
		"flowbite-svelte": "0.43.1",
		"flowbite-svelte-blocks": "0.4.6",
		"houdini": "1.2.8",
		"houdini-svelte": "1.2.8",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.27",
		"prettier": "3.0.1",
		"prettier-plugin-svelte": "3.0.3",
		"svelte": "4.1.2",
		"svelte-check": "3.4.6",
		"tailwindcss": "3.3.3",
		"tslib": "2.6.1",
		"typescript": "5.1.6",
		"vite": "4.4.9",
		"vite-tsconfig-paths": "4.2.0",
		"vitest": "0.34.1"
	}
}
