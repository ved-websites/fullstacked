{
	"name": "@app/client",
	"description": "Web client using Sveltekit, Flowbite and TS-Rest, with a custom realtime library named TS-WS.",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=7.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev --port 5000",
		"debug": "vavite-loader vite dev --port 5000",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"test": "npm-run-all -p test:*",
		"test:playwright": "playwright test",
		"test:unit": "pnpm run vitest --run",
		"vitest": "vitest",
		"playwright:test": "npm-run-all -s build preview",
		"validate": "npm-run-all -s validate:*",
		"validate:svelte": "npm-run-all -s sync check:svelte",
		"validate:ts": "tsc --noEmit",
		"check:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "npm-run-all -p lint:*",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint .",
		"format": "prettier --write ."
	},
	"prettier": "@v-ed/prettier-config/svelte.cjs",
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": {},
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"dependencies": {
		"@app/contract": "workspace:*",
		"@app/shared": "workspace:*",
		"@shippr/supersocket": "github:V-ed/supersocket",
		"@ts-rest/core": "3.30.5",
		"accept-language-parser": "1.5.0",
		"http-status-codes": "^2.2.0",
		"set-cookie-parser": "2.6.0",
		"sveltekit-i18n": "2.4.2",
		"sveltekit-superforms": "1.10.2",
		"tailwind-merge": "2.0.0",
		"vercel-email": "0.0.6",
		"wonka": "^6.3.2",
		"ws": "8.14.2",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@egoist/tailwindcss-icons": "1.4.0",
		"@iconify-json/mdi": "1.1.55",
		"@playwright/test": "1.39.0",
		"@sveltejs/adapter-vercel": "^3.1.0",
		"@sveltejs/kit": "1.27.6",
		"@types/accept-language-parser": "1.5.6",
		"@types/set-cookie-parser": "2.4.6",
		"@types/ws": "8.5.9",
		"@typescript-eslint/eslint-plugin": "6.11.0",
		"@typescript-eslint/parser": "6.11.0",
		"@v-ed/eslint-config": "0.1.6",
		"@v-ed/prettier-config": "0.3.0",
		"@v-ed/tsconfig": "0.3.0",
		"@vavite/node-loader": "3.0.0",
		"autoprefixer": "10.4.16",
		"flowbite": "2.1.1",
		"flowbite-svelte": "0.44.19",
		"flowbite-svelte-blocks": "0.5.1",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.31",
		"prettier": "3.1.0",
		"prettier-plugin-svelte": "3.1.0",
		"svelte": "4.2.3",
		"svelte-check": "3.6.0",
		"sveltekit-flash-message": "2.3.1",
		"tailwindcss": "3.3.5",
		"tslib": "2.6.2",
		"typescript": "5.2.2",
		"vite": "5.0.0",
		"vite-plugin-tailwind-purgecss": "0.1.3",
		"vite-tsconfig-paths": "4.2.1",
		"vitest": "0.34.6"
	}
}
