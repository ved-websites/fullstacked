{
	"name": "client",
	"description": "Web client using Sveltekit, Flowbite and supports GraphQL using Houdini.",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=7.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev --port 5000",
		"debug": "vavite-loader vite dev --port 5000",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"test": "npm-run-all -p test:*",
		"test:playwright": "playwright test",
		"test:unit": "pnpm run vitest --run",
		"vitest": "vitest",
		"playwright:test": "npm-run-all -s build preview",
		"validate": "npm-run-all -s validate:*",
		"validate:svelte": "npm-run-all -s sync check:svelte",
		"validate:ts": "tsc --noEmit",
		"check:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "npm-run-all -p lint:*",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint .",
		"format": "prettier --write ."
	},
	"prettier": "@v-ed/prettier-config/svelte.cjs",
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": {},
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"dependencies": {
		"accept-language-parser": "1.5.0",
		"graphql-ws": "^5.13.1",
		"http-status-codes": "^2.2.0",
		"set-cookie-parser": "2.6.0",
		"sveltekit-i18n": "2.4.2",
		"sveltekit-superforms": "1.7.0",
		"tailwind-merge": "1.14.0",
		"vercel-email": "0.0.6",
		"wonka": "^6.3.2",
		"ws": "8.14.1",
		"zod": "3.22.2"
	},
	"devDependencies": {
		"@egoist/tailwindcss-icons": "1.2.0",
		"@iconify-json/mdi": "1.1.54",
		"@playwright/test": "1.38.0",
		"@sveltejs/adapter-vercel": "^3.0.1",
		"@sveltejs/kit": "1.25.0",
		"@types/accept-language-parser": "1.5.4",
		"@types/set-cookie-parser": "2.4.3",
		"@types/ws": "8.5.5",
		"@typescript-eslint/eslint-plugin": "6.7.2",
		"@typescript-eslint/parser": "6.7.2",
		"@v-ed/eslint-config": "0.1.6",
		"@v-ed/prettier-config": "0.3.0",
		"@v-ed/tsconfig": "0.3.0",
		"@vavite/node-loader": "2.0.2",
		"autoprefixer": "10.4.15",
		"flowbite": "1.8.1",
		"flowbite-svelte": "0.44.15",
		"flowbite-svelte-blocks": "0.5.1",
		"houdini": "1.2.11",
		"houdini-svelte": "1.2.11",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.30",
		"prettier": "3.0.3",
		"prettier-plugin-svelte": "3.0.3",
		"svelte": "4.2.0",
		"svelte-check": "3.5.1",
		"sveltekit-flash-message": "2.2.1",
		"tailwindcss": "3.3.3",
		"tslib": "2.6.2",
		"typescript": "5.2.2",
		"vite": "4.4.9",
		"vite-plugin-tailwind-purgecss": "0.1.3",
		"vite-tsconfig-paths": "4.2.1",
		"vitest": "0.34.4"
	}
}
