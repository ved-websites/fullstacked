{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "client dev",
			"type": "shell",
			"command": "pnpm dev",
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			},
			"icon": {
				"id": "rocket"
			},
			"problemMatcher": {
				"pattern": {
					"regexp": ""
				},
				"background": {
					"beginsPattern": ".*VITE .*",
					"endsPattern": ".*Local:\\s*http.*"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"panel": "shared",
				"group": "dev",
				"showReuseMessage": false,
				"clear": false,
				"close": true,
			}
		},
		{
			"label": "Terminate Dev Server",
			"command": "echo ${input:terminate}",
			"type": "shell",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "client dev"
		}
	]
}