{
  "extends": "@v-ed/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2022",
    "lib": ["es2022"],
    "target": "es2022",

    "baseUrl": ".",
    
    "outDir": "./dist",
    
    "typeRoots": ["@types", "./node_modules/@types"],

    "importsNotUsedAsValues": "error",

    "forceConsistentCasingInFileNames": true
  },
  "include": [".graphqlrc.ts", "./scripts/**/*.ts"],
}
